{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",

    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/*"],
      "@shared/*": ["./shared/*"]
    }
  },

  "include": [
    "client/**/*",
    "server/**/*",
    "shared/**/*",
    "vite.config.js",
    "vite.config.server.js"
  ],

  "exclude": ["node_modules", "dist"]
}
